{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    // "extends": "airbnb-base",
    "extends": "eslint:recommended",
    // "globals": {"React": true},
    "parserOptions": {
        // https://segmentfault.com/a/1190000009819529
        // 开启对es8（ecma2017）新特性支持
        "ecmaVersion": 8,
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "html",
    ],
    "rules": {
        "no-const-assign": "warn",
        "no-this-before-super": "warn",
        "no-undef": "warn",
        "no-unreachable": "warn",
        "no-unused-vars": "warn",
        "constructor-super": "warn",
        "valid-typeof": "warn",
        "linebreak-style":"off",
        "eol-last":"error",
        "no-trailing-spaces":"error",
        "semi":["error", "never"]
    }
}