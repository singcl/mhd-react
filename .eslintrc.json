{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    // "extends": "airbnb-base",
    // eslint-plugin-react插件如何引入：https://github.com/yannickcr/eslint-plugin-react
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    // "globals": {"React": true},
    "parserOptions": {
        // http://eslint.cn/docs/user-guide/configuring#deprecated
        // ecmaFeatures.experimentalObjectRestSpread - 启用对实验性的 object rest/spread properties 支持。该语法在 ecmaVersion: 2018(es9) 中得到支持。该选项在未来将被移除。
        "ecmaVersion": 8,
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread":true
        },
        "sourceType": "module"
    },
    "plugins": [
        "html"
    ],
    "rules": {
        "no-const-assign": "warn",
        "no-this-before-super": "warn",
        "no-undef": "warn",
        "no-unreachable": "warn",
        "no-unused-vars": "warn",
        "constructor-super": "warn",
        "valid-typeof": "warn",
        "linebreak-style":"off",
        "eol-last":"error",
        "no-trailing-spaces":"error",
        "semi":["error", "never"]
    }
}